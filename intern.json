{
    "suites": ["tests/connection-tests/**/*.js"],
    "serverPort": 9093,
    "socketPort": 9094,
    "serveOnly": true,
    "tunnelOptions": {
        "drivers": [{
            "name": "chrome",
            "version": "2.36"
        }]
    },
    "browser": {
        "loader": {
            "script": "systemjs"
        },
        "plugins": {
            "script": "system-config.js",
