        }
    ],
    "configs": {

        "chrome": {
            "environments": "chrome",
            "tunnelOptions": {
                "tunnel": "selenium",
                "drivers": [{
                    "name": "chrome",
                    "version": "2.36"
                }]
            }
        }
    }
}